<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fg1">

    <ImageView
        android:id="@+id/LOGIN_IVlogo"
        android:layout_width="259dp"
        android:layout_height="243dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/LOGIN_IVbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login__logo" />

    <ImageView
        android:id="@+id/LOGIN_IVbox"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_marginBottom="84dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login_box" />

    <EditText
        android:id="@+id/LOGIN_ETusername"
        android:layout_width="297dp"
        android:layout_height="28dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="test@vivlio.com"
        android:textColor="#606060"
        android:textColorHint="#B1B1B1"
        app:layout_constraintEnd_toEndOf="@+id/LOGIN_IVbox"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="@+id/LOGIN_IVbox"
        app:layout_constraintTop_toTopOf="@+id/LOGIN_IVbox" />

    <EditText
        android:id="@+id/LOGIN_ETpassword"
        android:layout_width="297dp"
        android:layout_height="28dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:text="pass1234"
        android:textColor="#606060"
        android:textColorHint="#B1B1B1"
        app:layout_constraintEnd_toEndOf="@+id/LOGIN_IVbox"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="@+id/LOGIN_IVbox"
        app:layout_constraintTop_toTopOf="@+id/LOGIN_IVbox" />

    <ImageButton
        android:id="@+id/LOGIN_BTNlogin"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginBottom="56dp"
        android:text="LOG IN"
        android:background="@drawable/login_loginbuttonround"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/LOGIN_IVbox"
        app:layout_constraintEnd_toEndOf="@+id/LOGIN_IVbox"
        app:layout_constraintStart_toStartOf="@+id/LOGIN_IVbox" />

    <TextView
        android:id="@+id/LOGIN_TVlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="LOG IN"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/LOGIN_BTNlogin"
        app:layout_constraintEnd_toEndOf="@+id/LOGIN_BTNlogin"
        app:layout_constraintStart_toStartOf="@+id/LOGIN_BTNlogin"
        app:layout_constraintTop_toTopOf="@+id/LOGIN_BTNlogin" />

    <TextView
        android:id="@+id/LOGIN_TVcreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new to Vivlio?"
        android:textColor="#03A9F4"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/LOGIN_BTNlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="@+id/LOGIN_IVbox"
        app:layout_constraintTop_toBottomOf="@+id/LOGIN_ETpassword"
        app:layout_constraintVertical_bias="0.31" />
</androidx.constraintlayout.widget.ConstraintLayout>